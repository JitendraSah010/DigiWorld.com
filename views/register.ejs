<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DigiWorld.com/Registration Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/../css/home.css">
</head>

<body>
    <div class="container mt-2">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="text-center" style="margin-top: -12px;">
                            <% if(message.error) {%>
                                <p class=" fw-bold regMag text-center py-2 mt-3" id="loginError" > <%= message.error%> </p>
                            <%}%>
                            <img src="register.jpg" alt="" class="register-img">
                            <h2 class="login-heading fw-bold mt-0">Register Now</h2>
                            <p class="para mt-4">Create your free account at <span class="fw-bold text-black">Digi<span class="world">World</span></span> </p>
                            
                            <form action="/register-user" method="post" enctype="multipart/form-data">
                                <div class="form-floating mb-3">
                                    <input type="text" name="name" class="form-control login-input" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Full name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" name="email" class="form-control login-input" id="GetValue" placeholder="name@example.com">
                                    <label for="floatingInput">Email address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="number" name="contact" class="form-control login-input" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Contact Number</label>
                                </div>
                                <div class="form-floating mb-3 d-none">
                                    <input type="text" name="address" value="Add address" class="form-control login-input" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Enter Address</label>
                                </div>

                                <div class="form-floating ">
                                    <input type="password" name="password" class="form-control login-input" id="password" placeholder="name@example.com">
                                    <label for="floatingInput">Password</label>
                                </div>
                                <button class="btn btn-dark fw-bold px-3 my-3 py-1 fs-6 login-btn " type="submit"> Submit </button>                       
                            </form>
                            <img src="show.png" class="showPassword d-none regShowPas" id="hide" onclick="hide()">
                            <img src="hide.png" class="showPassword regShowPas" id="show" onclick="show()">
                            <div class=" d-flex justify-content-center">
                                <p>Already have account </p>
                                <a href="/login" class="ms-1  ">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const hideImage = document.getElementById("hide");
        const showImage = document.getElementById("show");
        function show(){     
            document.getElementById("password").type = "text";
            showImage.style.display = "none";
            hideImage.classList.remove("d-none");
        }
        function hide(){      
            document.getElementById("password").type = "password";
            hideImage.classList.add("d-none");
            showImage.style.display = "block";
        }
        // to hide alert after 5 second
        setTimeout( ()=> {
            document.getElementById("loginError").classList.add("d-none");
        }, 4000);        
    </script>   

</body>
</html>



